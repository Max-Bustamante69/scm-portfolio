---

const { jobTitle, companyName, class: className = "", icon, ...rest } = Astro.props;

---

<div
  class={`flex gap-4 w-full items-center justify-start text-center rounded-lg p-4 hover:bg-secondary/40 transition-all cursor-pointer duration-200  ${className}`}
  {...rest}
>
  <div class="size-12 rounded-full bg-secondary flex items-center justify-center">
    {
      icon ? <img src={`/icons/${icon}`} alt={`${jobTitle} icon`} class="size-8 object-cover rounded-full stroke0whi" /> : <div class="size-full bg-accent/10 rounded-full"></div>
    }
  </div>
  <div class="flex flex-col items-start">
    <h2 class="text-xl text-left font-Nunito font-bold text-accent">{jobTitle}</h2>
    <p class="text-lg text-left text-gray-600">{companyName}</p>
  </div>
</div>
