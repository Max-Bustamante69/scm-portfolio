---
import type { CollectionEntry } from "astro:content";

type Experience = CollectionEntry<"experiences">;

const { jobTitle, companyName } = Astro.props as Experience["data"];

const isSelected = Astro.props.isSelected || false;

---

<div
  class=`flex gap-4 w-full items-center justify-start text-center rounded-lg p-4 hover:bg-secondary/40 transition-colors  cursor-pointer duration-200 ${isSelected && 'bg-secondary/30'}`
>
  <div class="size-12 rounded-full bg-secondary"></div>
  <div class="flex flex-col items-start">
    <h2 class="text-2xl font-Nunito font-bold text-accent">{jobTitle}</h2>
    <p class="text-lg text-gray-600">{companyName}</p>
  </div>
</div>
